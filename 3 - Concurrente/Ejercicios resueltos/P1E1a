programa P1E1
areas
  ciudad: AreaC(1, 1, 100, 100)
robots
  robot tipo1
  comenzar
    repetir 3
      repetir 99
        si (HayFlorEnLaEsquina)
          tomarFlor
        mover
      mientras (HayFlorEnLaBolsa)
        depositarFlor
      Pos(PosAv + 2, 1)
  fin
variables
  robot1: tipo1
comenzar
  AsignarArea(robot1, ciudad)
  Iniciar(robot1, 1, 1)
fin