programa P1E1
areas
  ciudad: AreaC(1, 1, 100, 100)
robots
  robot tipo1
  comenzar
    repetir 99
      si (HayFlorEnLaEsquina)
        tomarFlor
      mover
    mientras (HayFlorEnLaBolsa)
      depositarFlor
  fin
variables
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
comenzar
  AsignarArea(robot1, ciudad)
  AsignarArea(robot2, ciudad)
  AsignarArea(robot3, ciudad)
  Iniciar(robot1, 1, 1)
  Iniciar(robot2, 3, 1)
  Iniciar(robot3, 5, 1)
fin