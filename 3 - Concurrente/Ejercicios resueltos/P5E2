programa P5E2
areas
  area1: AreaP(1,1,100,1)
  area2: AreaP(1,2,100,2)
  area3: AreaP(1,3,100,3)
  area4: AreaP(1,4,1,4)
  area5: AreaC(50,50,50,50)
procesos
  proceso avanzar
  variables
    i: numero
  comenzar
    i:= 0
    mientras (~(i = 10) & ~(PosAv = 100))
      mientras (HayFlorEnLaEsquina)
        tomarFlor
      mientras (HayPapelEnLaEsquina)
        tomarPapel
      i:= i + 1
      mover
  fin
  proceso descargar
  comenzar
    mientras (HayFlorEnLaBolsa)
      depositarFlor
    mientras (HayPapelEnLaBolsa)
      depositarPapel
  fin
  proceso contar (ES papeles, ES flores)
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      flores:= flores + 1
    mientras (HayPapelEnLaEsquina)
      tomarPapel
      papeles:= papeles + 1
  fin
robots
  robot recolector
  variables
    av,ca: numero
  comenzar
    derecha
    mientras ~(PosAv = 100)
      repetir 10
        avanzar
      av:= PosAv
      EnviarMensaje(av, fiscal)
      RecibirMensaje(av, fiscal)
    ca:= PosCa
    BloquearEsquina(50,50)
    Pos(50,50)
    descargar
    Pos(av,ca)
    LiberarEsquina(50,50)
  fin
  robot fiscalizador
  variables
    l1,l2, l3, l4, papeles, flores: numero 
  comenzar
    mientras ~(l1 = 100)
      RecibirMensaje(l1, robot1)
      RecibirMensaje(l2, robot2)
      RecibirMensaje(l3, robot3)
      EnviarMensaje(l1, robot1)
      EnviarMensaje(l2, robot2)
      EnviarMensaje(l3, robot3)
    BloquearEsquina(50,50)
    Pos(50,50)
    contar(papeles, flores)
    Pos(1, 4)
    LiberarEsquina(50,50)
  fin
variables
  robot1: recolector
  robot2: recolector